<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.miso202402.SportApp.fragments.ListEventsFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        android:textSize="30sp"
        android:layout_marginLeft="80dp"
        android:text="Lista de Eventos" />

    <Button
        android:id="@+id/buttonActualizar_ListEventsFragment"
        android:layout_width="120dp"
        android:layout_height="38dp"
        android:text="@string/textBtnActualizarAddTrainginPlan"
        android:textFontWeight="14"
        android:backgroundTint="@color/main"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_ListEventsFragment"
        android:layout_width="409dp"
        android:layout_height="450dp"
        android:backgroundTint="#FFFEF7"
        android:layout_marginLeft="20px"
        android:layout_marginStart="1dp"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonCalendar_ListEventsFragment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:scaleType="fitXY"
        android:layout_marginTop="670dp"
        android:layout_marginLeft="120dp"
        android:src="@drawable/calendar_logo" />

    <ImageButton
        android:id="@+id/imageButtonRouts_ListEventsFragment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:scaleType="fitXY"
        android:layout_marginTop="670dp"
        android:layout_marginLeft="220dp"
        android:src="@drawable/world_vector" />


</FrameLayout>