<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    android:backgroundTint="#FFFFFF"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <TextView
            android:id="@+id/textViewName_cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="50px"
            android:text="Titulo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/textViewLocation_cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:textSize="35px"
            android:text="Location"
            app:layout_constraintTop_toBottomOf="@+id/textViewName_cardView"
            app:layout_constraintStart_toStartOf="parent"
             />

        <TextView
            android:id="@+id/textViewDate_cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:textSize="35px"
            android:text="Date"
            app:layout_constraintTop_toBottomOf="@+id/textViewLocation_cardView"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/textViewdescription_cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:textSize="35px"
            android:text="Desc"
            app:layout_constraintTop_toBottomOf="@+id/textViewDate_cardView"
            app:layout_constraintStart_toStartOf="parent"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewdescription_cardView"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textViewEvento_cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textStyle="italic"
                android:textSize="35px"
                android:text="Evento"
                android:textColor="@color/white"
                android:background="#6C757D"
                />
            <TextView
                android:id="@+id/textViewRuta_cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textStyle="italic"
                android:textSize="35px"
                android:text="Ruta"
                android:textColor="@color/white"
                android:background="#212529"
                />
            <TextView
                android:id="@+id/textViewAtletismo_cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textStyle="italic"
                android:textSize="35px"
                android:text="Atletismo"
                android:textColor="@color/white"
                android:background="#FFC007"
                />
            <TextView
                android:id="@+id/textViewCiclismo_cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textStyle="italic"
                android:textSize="35px"
                android:text="Ciclismo"
                android:textColor="@color/white"
                android:background="#0C6DFD"
                />
            <TextView
                android:id="@+id/textViewVirtual_cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textStyle="italic"
                android:textSize="35px"
                android:text="Virtual"
                android:textColor="@color/white"
                android:background="#198753"
                />
            <TextView
                android:id="@+id/textViewPresencial_cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textStyle="italic"
                android:textSize="35px"
                android:text="Presencial"
                android:textColor="@color/white"
                android:background="#DC3444"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>