<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="70dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context="com.miso202402.SportApp.fragments.InfoTrainingPlan">

    <TextView
        android:id="@+id/namePlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Nombre de Plan"
        />
    <TextView
        android:id="@+id/descPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Descripcion de Plan"
        />
    <TextView
        android:id="@+id/weeksPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Semanas de Plan"
        />
    <TextView
        android:id="@+id/sportPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Deporte de Plan"
        />
    <TextView
        android:id="@+id/riskAlertsPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Alertas de Plan"
        android:visibility="gone"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center|center_horizontal"
        android:layout_centerHorizontal="true"
        >
        <Button
            android:id="@+id/buttonFood"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/main"
            android:text="Rutina Alimentacion"
            android:textSize="12dp"/>
        <Button
            android:id="@+id/buttonRest"
            android:layout_below="@id/buttonRest"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/main"
            android:text="Rutina Descanso"
            android:textSize="12dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_ListObjectives"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        />

    <Button
        android:id="@+id/buttonAsociar"
        android:layout_width="301dp"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        android:gravity="center"

        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/main"
        android:text="Asociar"
        android:textFontWeight="14" />
    <Button
        android:id="@+id/buttonAtras"
        android:layout_width="301dp"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/main"
        android:text="Atras"
        android:textFontWeight="14" />

</LinearLayout>