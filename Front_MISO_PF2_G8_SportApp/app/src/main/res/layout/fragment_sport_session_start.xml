<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="70dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context="com.miso202402.SportApp.fragments.SportSessionStartFragment">

    <TextView
        android:id="@+id/nameSession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Nombre de Plan"
        />
    <TextView
        android:id="@+id/weekSession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Semana"
        />
    <TextView
        android:id="@+id/daySession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Dia"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_ListObjectives"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        />
    <TextView
        android:id="@+id/time_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:text="00:00:00"
        android:textSize="56sp" />
    <Button
        android:id="@+id/buttonIniciar"
        android:layout_width="301dp"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/main"
        android:text="Iniciar"
        android:textFontWeight="14" />
    <Button
        android:id="@+id/buttonPausar"
        android:layout_width="301dp"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/main"
        android:text="Pausar"
        android:textFontWeight="14" />
    <Button
        android:id="@+id/buttonFinalizar"
        android:layout_width="301dp"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/main"
        android:text="Finalizar"
        android:textFontWeight="14" />

</LinearLayout>