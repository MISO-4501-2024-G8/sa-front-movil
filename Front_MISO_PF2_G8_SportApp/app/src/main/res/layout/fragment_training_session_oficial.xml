<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.miso202402.SportApp.fragments.TrainingSessionOficialFragment">


    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginLeft="80dp"
        android:text="Agendar Sesíon" />

    <RadioButton
        android:id="@+id/radioButton_VirtualSession_TrainingSessionOficialFragment"
        android:layout_width="wrap_content"
        android:textColorHighlight="@color/main"
        android:textColor="@color/main"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="41dp"
        android:layout_height="wrap_content"
        android:text="Sesión Virtual" />

    <RadioButton
        android:id="@+id/radioButton_LocalSession_TrainingSessionOficialFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main"
        android:textColorHighlight="@color/main"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="230dp"
        android:text="Sesión Presencial" />

    <EditText
        android:id="@+id/editTexDescription_TrainingSessionOficialFragment"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="110dp"
        android:ems="12"
        android:hint="Descripción"
        android:inputType="textLongMessage"
        android:tooltipText="Descripcíon"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="336dp" />

    <DatePicker
        android:id="@+id/calendarView_TrainingSessionOficialFragment"
        android:layout_width="wrap_content"
        android:layout_height="290dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:calendarViewShown="false"
        android:datePickerMode="calendar"
        android:layout_marginTop="155dp"
        android:spinnersShown="true" />

    <RadioButton
        android:id="@+id/radioButton_Deportologo_TrainingSessionOficialFragment"
        android:layout_width="wrap_content"
        android:textColorHighlight="@color/main"
        android:textColor="@color/main"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="41dp"
        android:layout_height="wrap_content"
        android:text="Deportologo" />

    <RadioButton
        android:id="@+id/radioButton_Entrenador_TrainingSessionOficialFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main"
        android:textColorHighlight="@color/main"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="230dp"
        android:text="Entrenador" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_TrainingSessionOficialFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="475dp"
        android:layout_marginEnd="10dp"
        android:visibility="visible" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="570dp"
        android:layout_gravity="center_horizontal"
        android:visibility="visible" />

    <Button
        android:id="@+id/buttonAgregar_TrainingSessionOficialFragment"
        android:layout_width="301dp"
        android:layout_height="38dp"
        android:text="@string/textBtnAddTrainginPlan"
        android:textFontWeight="14"
        android:backgroundTint="@color/main"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="750dp"/>






</FrameLayout>