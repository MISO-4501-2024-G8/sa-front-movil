<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.miso202402.SportApp.fragments.TrainingSessionOficialFragment">


    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginLeft="120dp"
        android:text="Agendar Sesíon" />

    <RadioButton
        android:id="@+id/radioButton_VirtualSession_TrainingSessionOficialFragment"
        android:layout_width="wrap_content"
        android:textColorHighlight="@color/main"
        android:textColor="@color/main"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="41dp"
        android:layout_height="wrap_content"
        android:text="Sesión Virtual" />

    <RadioButton
        android:id="@+id/radioButton_LocalSession_TrainingSessionOficialFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main"
        android:textColorHighlight="@color/main"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="230dp"
        android:text="Sesión Presencial" />

    <DatePicker
        android:id="@+id/calendarView_TrainingSessionOficialFragment"
        android:layout_width="wrap_content"
        android:layout_height="290dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:calendarViewShown="false"
        android:datePickerMode="calendar"
        android:layout_marginTop="135dp"
        android:spinnersShown="true" />

    <RadioButton
        android:id="@+id/radioButton_Deportologo_TrainingSessionOficialFragment"
        android:layout_width="wrap_content"
        android:textColorHighlight="@color/main"
        android:textColor="@color/main"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="41dp"
        android:layout_height="wrap_content"
        android:text="Deportologo" />

    <RadioButton
        android:id="@+id/radioButton_Entrenador_TrainingSessionOficialFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main"
        android:textColorHighlight="@color/main"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="230dp"
        android:text="Entrenador" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_TrainingSessionOficialFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="475dp"
        android:layout_marginEnd="10dp"
        android:visibility="visible" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="570dp"
        android:layout_gravity="center_horizontal"
        android:visibility="visible" />

    <Button
        android:id="@+id/buttonAgregar_TrainingSessionOficialFragment"
        android:layout_width="130dp"
        android:layout_height="38dp"
        android:text="@string/textBtnAddTrainginPlan"
        android:textFontWeight="14"
        android:backgroundTint="@color/main"
        android:layout_marginLeft="295dp"
        android:layout_marginTop="805dp"/>






</FrameLayout>